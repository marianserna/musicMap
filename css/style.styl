*
  font-size 1rem
  box-sizing border-box
  margin 0
  padding 0

body
  font-family 'Arsenal', sans-serif
  color #8C95AA

.recent
  position fixed
  bottom 30px
  right 30px
  max-width 250px
  z-index 500
  padding 10px
  border solid 2px red
  color #acacac
  opacity 0

#landing
  margin 0
  margin-bottom 200px
  padding 0
  width 100vw
  height 100vh
  background #ffffff

  video
    display block
    margin 0 auto
    max-width 100vw
    max-height 100vh
    // box-shadow -5px 5px 5px #403E4E

  #web-nav
    span, ul
      position absolute
      top 75%
      display flex
      justify-content center
      align-items center
      z-index 10

  #music-word
    color #542733
    font-size 1.5em

  #map-word
    color #E94C6F
    font-size 1.5em

#container
  display none
  width 90vw
  margin 0 auto

#search
  width 50vw
  min-height 100vh

#map-search
  min-height 100vh

  span
    display flex
    justify-content center
    font-size 0.7rem

#canvas
  height 50vh

#name-search-form
  display flex
  width 80%
  font-size 0.8rem

  #name-search-input
    width 70%
    &:focus
      outline 0

  button
    width 30%

#playlist
  width 50vw
  height 100vh

  h1
    padding-top 25px
    padding-bottom 25px
    color #E94C6F

  #player
    height 20vh

  #playdrop
    overflow-y scroll
    padding-top 25px
    min-height 50vh
    height 40vh


.track
  border-bottom solid 1px #C2DFEA
  display flex
  flex-direction row
  align-items center

  img
    width 50px
    height 50px

  span
    display flex
    text-align center
    justify-content flex-start
    padding-left 25px
    padding-right 15px
    font-size 0.75rem
    color #7F7F7F
    width 70%

  i
    width 15%
    color #A7DBDB
    text-align right

    &:hover
      color #9068BE
